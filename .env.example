# Environment configuration for swagger-docs-mcp Docker container
# Copy this file to .env and modify the values as needed

# =================
# API Configuration
# =================

# Weather API key for authentication
WX_MCP_API_KEY=your-api-key-here

# Request timeout in milliseconds
WX_MCP_TIMEOUT=30000

# Maximum number of tools to generate
WX_MCP_MAX_TOOLS=1000

# =================
# Logging
# =================

# Enable debug mode (true/false)
WX_MCP_DEBUG=false

# Log level (error, warn, info, debug)
WX_MCP_LOG_LEVEL=info

# =================
# Swagger Sources
# =================

# Comma-separated list of swagger document paths
# Leave empty to use default paths in container
WX_MCP_PATHS=

# Comma-separated list of swagger document URLs
WX_MCP_URLS=

# =================
# TWC Filtering
# =================

# Comma-separated list of Solara package IDs to include
# Example: WX_MCP_PACKAGE_ID=db77e7e5-8c7f-42b1-b7e7-e58c7f32b140,ccab6ba7-fb31-4d56-ab6b-a7fb315d5685
WX_MCP_PACKAGE_ID=

# Filter by TWC domains
WX_MCP_TWC_DOMAIN=

# Filter by TWC portfolios
WX_MCP_TWC_PORTFOLIO=

# Filter by TWC geographies
WX_MCP_TWC_GEOGRAPHY=

# =================
# Advanced Configuration
# =================

# Validate swagger documents (true/false)
WX_MCP_VALIDATE_SWAGGER=true

# Skip invalid swagger documents (true/false)
WX_MCP_SKIP_INVALID=true

# =================
# Custom Filters
# =================

# Custom filters can be added with the pattern WX_MCP_FILTER_*
# Example:
# WX_MCP_FILTER_CUSTOM_FIELD=value1,value2

# =================
# Development Settings
# =================

# Enable development mode features
WX_MCP_DEV_MODE=false

# Custom configuration file path (optional)
WX_MCP_CONFIG_FILE=